{
  "name": "js-reporters",
  "version": "1.2.2",
  "description": "Common reporter interface for JavaScript testing frameworks.",
  "main": "index.js",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/js-reporters/js-reporters.git"
  },
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "lint": "semistandard",
    "test": "npm run lint && npm run test-unit && npm run test-integration",
    "test-unit": "mocha --recursive test/unit/",
    "test-integration": "mocha test/integration/adapters.js",
    "test-versions": "mocha test/versions/versions.js"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "chalk": "^1.1.3",
    "commitplease": "3.1.0",
    "jasmine": "2.5.1",
    "mocha": "^2.4.5",
    "qunitjs": "^2.0.0-rc1",
    "semistandard": "14.2.3",
    "sinon": "^1.17.4",
    "sinon-chai": "^2.8.0"
  },
  "commitplease": {
    "nohook": true,
    "components": [
      "Build",
      "Changelog",
      "Readme",
      "Release",
      "Reporter",
      "Test",
      "Docs"
    ]
  }
}
