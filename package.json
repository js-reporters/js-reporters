{
  "name": "js-reporters",
  "version": "1.0.0",
  "scripts": {
    "build": "node build.js",
    "lint": "eslint lib/ test/",
    "test": "node test/test.js"
  },
  "devDependencies": {
    "babel": "^5.6.14",
    "commitplease": "^2.2.3",
    "eslint": "^0.24.1",
    "esperanto": "^0.7.3",
    "jasmine": "^2.3.1",
    "jasmine-core": "^2.3.4",
    "mkdirp": "^0.5.1",
    "mocha": "^2.2.5",
    "qunitjs": "^1.18.0"
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "node": true
    },
    "ecmaFeatures": {
      "modules": true
    },
    "rules": {
      "no-console": 0,
      "brace-style": 1,
      "space-before-blocks": 1,
      "lines-around-comment": [
        1,
        {
          "beforeBlockComment": true,
          "beforeLineComment": true
        }
      ]
    },
    "globals": {
      "console": false
    }
  }
}
